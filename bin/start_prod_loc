#!/bin/bash

SELF_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source "$SELF_DIR/config"

MONGO_URL=$1

if [ -z "$MONGO_URL" ]
then
	echo "Error: mongo url required"
	exit 1
fi

	# --tmpfs /tmp \
	# --rm \
IMAGE_TAG=${2-$DEFAULT_IMAGE_TAG}

docker run \
	-d \
	--name ${IMAGE_NAME} \
	-p 3000:3000 \
	-p 4000:4000 \
	-e MONGO_URL=$MONGO_URL \
	"$IMAGE_TAG"
